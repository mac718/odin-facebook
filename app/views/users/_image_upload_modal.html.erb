<div class="modal fade" id=<%= locals[:id] %> tabindex="-1" role="dialog" aria-labelledby="changeCoverTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changeCoverTitle">Select <%= locals[:photo_type].to_s.gsub('_', ' ').capitalize %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%=form_for locals[:model], url: locals[:path], method: locals[:method]  do |f| %>
          <%= f.hidden_field locals[:hidden_field], value: params[:id] %>
          <%= f.file_field locals[:photo_type], id: 'choose_pic' %>
          <%= f.submit "Update #{locals[:photo_type].to_s.gsub('_', ' ').capitalize}", id: 'update-profile-pic-btn', class: 'btn btn-primary btn-sm' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div> 
</div>